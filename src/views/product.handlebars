<main class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="card shadow-lg">
        <div class="row g-0">
          <div class="col-md-5">
            <img src="{{product.image}}" class="img-fluid rounded-start w-100 h-100" alt="{{product.title}}" style="object-fit: cover;">
          </div>
          <div class="col-md-7">
            <div class="card-body d-flex flex-column h-100">
              <h2 class="card-title text-success">{{product.title}}</h2>

              {{#if product.onsale}}
              <span class="badge bg-danger mb-2">On Sale</span>
              {{/if}}

              <p class="card-text text-muted mb-1">
                <strong>Category:</strong> {{product.category}}
              </p>

              <p class="card-text mb-3">
                <strong>Description:</strong><br>
                {{#if product.description}}
                  {{product.description}}
                {{else}}
                  <em>No description provided.</em>
                {{/if}}
              </p>

              <p class="card-text fs-5">
                <strong>Price:</strong> USD {{product.price}}
              </p>

              <p class="card-text">
                <strong>Stock:</strong> {{product.stock}} units
              </p>

              <a href="/" class="btn btn-outline-success mt-auto align-self-start">‚Üê Back to Products</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>