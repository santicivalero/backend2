<main class="container py-4 px-3">
  <h1 class="text-center text-success mb-4">List of Products</h1>

  <div class="row g-4 justify-content-center">
    {{#each products}}
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <div class="card h-100 shadow-sm">
        <img src="{{this.image}}" class="card-img-top" alt="Product {{this._id}}" style="height: 200px; object-fit: cover;">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">USD {{this.price}}</p>
          <a href="/product/{{this._id}}" class="btn btn-outline-success mt-auto">+ Info</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</main>